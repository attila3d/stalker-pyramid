<li>
    <a href="{{ request.route_url('view_user', id=user.id) }}"
       title="Photo Title" data-rel="colorbox"
       class="cboxElement">
        <img alt="150x150" style="height: 150px"
             src="{%- if user.thumbnail -%}
                    /{{ user.thumbnail.full_path }}
                {%- else -%}
                    {{ request.static_url("stalker_pyramid:static/stalker/images/Placeholder_0.png") }}
           {%- endif -%}">

        <div class="tags">
            <span class="label label-warning arrowed-in">{{ user.name }}</span>
        </div>
    </a>

    <div class="tools">
        <a href="#">
            <i class="icon-link"></i>
        </a>

        <a href="#">
            <i class="icon-paper-clip"></i>
        </a>

        <a href="#">
            <i class="icon-pencil"></i>
        </a>

        <a href="#">
            <i class="icon-remove red"></i>
        </a>
    </div>
</li>